{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SpotPrice - FX",
  "description": "Schema for spot prices for FX",
  "type": "object",
  "required": ["assetId", "type", "assetClass", "timestamp", "price"],
  "properties": {
    "id": { "type": "string" },
    "schemaVersion": { "type": "string" },
    "version": { "type": "string" },
    "assetId": { "type": "string" },
    "assetClass": { "type": "string", "enum": ["fx"] },
    "dataType": { "type": "string", "enum": ["price"] },
    "tags": { "type": "array", "items": { "type": "string" } },
    "documentType": { "type": "string", "enum": ["official", "intraday", "live"] },
    "timestamp": { "type": "string", "format": "date-time" },
    "price": { "type": "number" }
  }
}